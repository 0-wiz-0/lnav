{
    "$schema": "https://lnav.org/schemas/config-v1.schema.json",
    "ui" : {
        "clock-format": "%a %b %d %H:%M:%S %Z",
        "dim-text": false,
        "default-colors": true,
        "keymap": "default",
        "theme": "default"
    },
    "tuning": {
        "archive-manager": {
            "min-free-space": 33554432,
            "cache-ttl": "2d"
        },
        "remote": {
            "ssh": {
                "command": "ssh",
                "config": {
                    "BatchMode": "yes",
                    "StrictHostKeyChecking": "no"
                }
            }
        }
    }
}
